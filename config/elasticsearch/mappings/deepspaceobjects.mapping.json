{
  "settings": {
    "analysis": {
      "normalizer": {
        "lowercase_normalizer": {
          "type": "custom",
          "filter": ["lowercase", "asciifolding"]
        }
      }
    }
  },
  "mappings": {
    "_doc": {
      "properties": {
        "id": {
          "type": "text",
          "fields": {
            "raw": {
              "type": "keyword"
            }
          },
          "copy_to": "suggest"
        },
        "catalog": {
          "type": "text",
          "fields": {
            "keyword": {
              "type": "keyword"
            }
          }
        },
        "order": {
          "type": "integer"
        },
        "geometry": {
          "type": "geo_shape"
        },
        "data": {
          "properties": {
            "desigs": {
              "type": "keyword",
              "normalizer": "lowercase_normalizer",
              "copy_to": "suggest"
            },
            "alt": {
              "properties": {
                "alt" :{
                  "type": "text",
                  "fields": {
                    "en": {
                      "type": "text",
                      "analyzer": "english"
                    },
                    "fr": {
                      "type": "text",
                      "analyzer": "french"
                    },
                    "es": {
                      "type": "text",
                      "analyzer": "spanish"
                    },
                    "de": {
                      "type": "text",
                      "analyzer": "german"
                    },
                    "pt": {
                      "type": "text",
                      "analyzer": "portuguese"
                    },
                    "it": {
                      "type": "text",
                      "analyzer": "italian"
                    }
                  }
                }
              }
            },
            "type": {
              "type": "text",
              "fields": {
                "keyword": {
                  "type": "keyword"
                }
              }
            },
            "mag": {
              "type": "float"
            },
            "const_id": {
              "type": "text",
              "fields": {
                "keyword": {
                  "type": "keyword"
                }
              }
            },
            "dim": {
              "type": "text"
            },
            "cl": {
              "type": "text"
            },
            "dist_al": {
              "type": "float"
            },
            "discover": {
              "type": "text"
            },
            "discover_year": {
              "type": "float"
            },
            "ra": {
              "type": "text"
            },
            "dec": {
              "type": "text"
            },
            "astrobin_id": {
              "type": "text"
            }
          }
        },
        "suggest": {
          "type" : "completion"
        }
      }
    }
  }
}
