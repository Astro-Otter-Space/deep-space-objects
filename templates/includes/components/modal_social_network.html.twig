{% from 'helpers/icon.html.twig' import icon %}

<div id="popup1"
   class="popup-overlay"
   data-popup-state="{{ popupState|default('disabled') }}"
   data-popup-displaypage="{{ displayPage|default(10000) }}"
>
  <div class="popup">
    <h2 class="Dso__title">{{ 'social_network.follow_us'|trans }}</h2>
    <a class="popup__close" href="#" data-popup-close>&times;</a>
    <div class="content">
      <img src="{{ pageImage200 }}" alt="{{ 'dso'|trans }}" class="center_image">


      <div class="popup__container">
        <div class="popup__title_1">
          {{ 'social_network.description'|trans }}
        </div>
        <div class="popup__content popup__content_1">
          <a href="{{ facebook.path }}"{% if true is same as(facebook.blank) %} target="_blank" {% endif %}>
            {{ facebook.label }}
          </a>
        </div>
        <div class="popup__content popup__content_2">
          <a href="{{ twitter.path }}"{% if true is same as(twitter.blank) %} target="_blank" {% endif %}>
            {{ twitter.label }}
          </a>
        </div>
        <div class="popup__title_2">
          {{ 'support.second'|trans|raw }}
        </div>
        <div class="popup__content popup__content_3">
          <a href="{{ tipeee.path }}"{% if true is same as(tipeee.blank) %} target="_blank" {% endif %}>
            {{ tipeee.label }}
          </a>
        </div>
        <div class="popup__content popup__content_4">
          <a href="{{ paypal.path }}"{% if true is same as(paypal.blank) %} target="_blank" {% endif %}>
            {{ paypal.label }}
          </a>
        </div>
      </div>
    </div>
    <div class="popup__footer">
      <input type="button" value="{{ 'close'|trans }}" data-popup-close>
    </div>
  </div>
</div>
