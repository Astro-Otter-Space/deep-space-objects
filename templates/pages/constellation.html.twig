{% extends 'base.html.twig' %}

{% set title = "const_id." ~ constellation.id|lower %}

{% block content %}
  <div id="appConst"
       data-const-widget
       data-title="{{ title|trans }}"
       data-imgcover="{{ asset('build/images/const_thumbs/' ~ constellation.id|lower ~ '.jpg') }}"
       data-list-dso="{{ list_dso|json_encode }}"
  ></div>
{% endblock %}

{% block javascripts %}
  {{ parent() }}
  {{ encore_entry_script_tags('const') }}
{% endblock %}
