{% extends 'base.html.twig' %}

{% block content %}

  <div>
    <section class="Dso__main">
      <div class="Dso__container Dso__noHeader">
        <h2 class="Dso__title">{{ 'addObservation'|trans }}</h2>

        {% for messages in app.flashes("form.failed") %}
          <div class="Form__message Form__error">
            {{ messages|trans }}
          </div>
        {% endfor %}

        {% for messages in app.flashes("form.success") %}
          <div class="Form__message Form__success">
            {{ messages|trans }}
          </div>
        {% endfor %}

        {% if false == is_valid %}
          <div class="Dso__Form">
            {% include 'forms/addObservation.html.twig' with {form: formAddObservation} %}
          </div>
        {% endif %}

      </div>
    </section>
  </div>

{% endblock %}