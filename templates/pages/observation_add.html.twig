{% extends 'base.html.twig' %}

{% set pageTitle = 'addObservationTitle'|trans %}
{% set pageDesc = 'addObservationDesc'|trans %}

{% block content %}

  <div>
    <section class="Dso__main">
      <div class="Dso__container Dso__noHeader">
        <h2 class="Dso__title">{{ 'addObservationTitle'|trans }}</h2>

        {% for messages in app.flashes("form.failed") %}
          <div class="Form__message Form__error">
            {{ messages|raw }}
          </div>
        {% endfor %}

        {% for messages in app.flashes("form.success") %}
          <div class="Form__message Form__success">
            {{ messages|raw }}
          </div>
        {% endfor %}

        {% if false == is_valid %}
          <div class="Dso__Form">
            {% include 'forms/observation.html.twig' with {form: formAddObservation} %}
          </div>
        {% endif %}
      </div>
    </section>
  </div>

{% endblock %}

{% block javascripts %}
  {{ parent() }}
  {{ encore_entry_script_tags('leaflet') }}
  {{ encore_entry_script_tags('tags') }}

{% endblock %}
