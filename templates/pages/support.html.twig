{% extends 'base.html.twig' %}

{% set pageTitle = 'support.title'|trans %}
{% set pageDesc = 'support.desc'|trans|truncate(200) %}

{% block content %}
  <div>
    <section class="Dso__main">
      <div class="Dso__container Dso__noHeader">
        <h1 class="Dso__title">{{ 'support.title'|trans }}</h1>

        <div>
         <p>{{ 'support.first'|trans({'sitename': 'dso'|trans})|raw }}</p>
          <p>
            {{ 'support.second'|trans|raw }}
          </p>

          <p>
            {{ 'support.third'|trans }}
          </p>

          <div id="appLinks"
               data-links="{{ links|json_encode }}"
          >
          </div>
        </div>
        <div>

          En vous remerciant d'avance :).

          Astro-Otter.
        </div>
      </div>
    </section>
  </div>
{% endblock %}

{% block javascripts %}
  {{ parent() }}
  {{ encore_entry_script_tags('support') }}
{% endblock %}
