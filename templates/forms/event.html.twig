{{ form_start(form) }}

  <h3 class="Dso__title">{{ 'Information'|trans }}</h3>

  <div class="Form__group">
    <div class="Form__element Form__element__1-2">
      {{ form_label(form.name) }}
      {{ form_widget(form.name) }}
      {{ form_errors(form.name) }}
    </div>

    <div class="Form__element Form__element__1-2">
      {{ form_label(form.eventDate) }}
      {{ form_widget(form.eventDate) }}
      {{ form_errors(form.eventDate) }}
    </div>
  </div>

  <div class="Form__group">
    {{ form_label(form.description) }}
    {{ form_widget(form.description) }}
    {{ form_errors(form.description) }}
  </div>

<h3 class="Dso__title">{{ 'place'|trans }}</h3>

  <div class="Form__group">
    {{ form_label(form.locationLabel) }}
    {{ form_widget(form.locationLabel) }}
    {{ form_errors(form.locationLabel) }}
  </div>

  <div id="map" class="Dso__leaflet">
    <l-map :zoom="zoom" :center="center" v-on:click="addMarker" ref="map" :form="form">
      <l-tile-layer :url="url" :attribution="attribution"></l-tile-layer>
      <l-marker v-for="marker,index in markers" :lat-lng="marker" v-on:click="removeMarker(index)"></l-marker>
    </l-map>
    {{ form_widget(form.location) }}
  </div>

<h3 class="Dso__title">{{ 'organiser'|trans }}</h3>
  <div class="Form__group">

    <div class="Form__element Form__element__1-2">
      {{ form_label(form.organiserName) }}
      {{ form_widget(form.organiserName) }}
      {{ form_errors(form.organiserName) }}
    </div>

    <div class="Form__element Form__element__1-2">
      {{ form_label(form.organiserMail) }}
      {{ form_widget(form.organiserMail) }}
      {{ form_errors(form.organiserMail) }}
    </div>
  </div>
  <div class="Form__group">
    <div class="Form__element Form__element__1-2">
    {{ form_label(form.organiserTel) }}
    {{ form_widget(form.organiserTel) }}
    {{ form_errors(form.organiserTel) }}
    </div>

    <div class="Form__element Form__element__1-2">
    {{ form_label(form.public) }}
    {{ form_widget(form.public) }}
    {{ form_errors(form.public) }}
    </div>
  </div>

  <div class="Form__group">
    <div class="Form__element Form__element__1-2">
    {{ form_label(form.tarif) }}
    {{ form_widget(form.tarif) }}
    {{ form_errors(form.tarif) }}
    </div>

    <div class="Form__element Form__element__1-2">
    {{ form_label(form.numberEntrant) }}
    {{ form_widget(form.numberEntrant) }}
    {{ form_errors(form.numberEntrant) }}
    </div>
  </div>
</div>

  {% form_theme form '@EWZRecaptcha/Form/ewz_recaptcha_widget.html.twig' %}
  {{ form_widget(form.recaptcha) }}

  {{ form_widget(form.pot2Miel) }}

  <div class="Form__group">
    <button type="submit" class="Form__submit" id="btn_event_submit">
      {{ 'contact.form.submit'|trans }}
    </button>
  </div>
{{ form_end(form) }}
