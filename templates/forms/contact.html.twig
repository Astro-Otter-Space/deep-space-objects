{{ form_start(form) }}

  <div class="Form__group">
    {{ form_label(form.firstname) }}
    {{ form_widget(form.firstname) }}
    {{ form_errors(form.firstname) }}
  </div>

  <div class="Form__group">
    {{ form_label(form.lastname) }}
    {{ form_widget(form.lastname) }}
    {{ form_errors(form.lastname) }}
  </div>

  <div class="Form__group">
    {{ form_label(form.email) }}
    {{ form_widget(form.email) }}
    {{ form_errors(form.email) }}
  </div>

  {% for emailField in form.email %}
    <div class="Form__group">
      {{ form_label(emailField) }}
      {{ form_widget(emailField) }}
      {{ form_errors(emailField) }}
    </div>
  {% endfor %}

  <div class="Form__group">
    {{ form_label(form.country) }}
    {{ form_widget(form.country) }}
    {{ form_errors(form.country) }}
  </div>

  <div class="Form__group">
    {{ form_label(form.topic) }}
    {{ form_widget(form.topic) }}
    {{ form_errors(form.topic) }}
  </div>

  <div class="Form__group">
    {{ form_label(form.message) }}
    {{ form_widget(form.message) }}
    {{ form_errors(form.message) }}
  </div>

  {{ form_widget(form.pot2Miel) }}

  {% form_theme form '@EWZRecaptcha/Form/ewz_recaptcha_widget.html.twig' %}
  {{ form_widget(form.recaptcha) }}

  <button type="submit" class="Form__submit" id="btn_contact_submit">
    {{ 'contact.form.submit'|trans }}
  </button>
{{ form_end(form) }}